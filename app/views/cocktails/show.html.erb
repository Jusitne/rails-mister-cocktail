<h1>Awesome recette for awesome cockails</h1>
<h2> <%= @cocktail.name %></h2>
<ul>
<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description %>
<%= dose.ingredient.name %></li>
<%= link_to "delete", dose_path(dose), method: :delete, data: {confirm:"Vraiment?"} %>
<% end %>

</ul>
